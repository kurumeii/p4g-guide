{
  "$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "suspicious": {
        "noExplicitAny": "off"
      },
      "recommended": true
    }
  },
  "formatter": {
    "include": ["**/*.js", "**/*.ts", "**/*.jsx", "**/*.tsx", "**/*.json", "**/*.jsonc"],
    "enabled": true,
    "formatWithErrors": true,
    "lineEnding": "crlf",
    "indentStyle": "space"
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  }
}
